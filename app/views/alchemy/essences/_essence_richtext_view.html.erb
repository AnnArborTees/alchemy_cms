<% cache(content) do %>
<% options = local_assigns.fetch(:options, {}) %>
<% output = capture do %>
  <%= raw content.essence.send(options[:plain_text] ? :stripped_body : :body) %>
<% end %>
<% if @preview_mode %>
<alchemy:content data-alchemy-content-id="<%= content.id %>">
  <%= output %>
</alchemy:content>
<% else %>
<%= output %>
<% end %>
<% end %>
